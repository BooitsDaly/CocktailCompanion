<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@android:color/background_light"
              android:padding="20dp"
              android:gravity="center"
              tools:context=".DrinkFragment">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0"
            android:layout_margin="10dp"
            android:id="@+id/drink_name"
            android:textSize="36sp"
            android:textColor="@android:color/black" android:layout_marginTop="20dp" android:paddingTop="20dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/drink_instructions" android:layout_weight="0"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/drink_glass" android:layout_weight="0"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/drink_alcaholic" android:layout_weight="0"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/drink_ingredients" android:layout_weight="0"/>
    <ImageView android:layout_width="363dp" android:layout_height="490dp"
               android:layout_weight="1"
               android:id="@+id/drink_image"
               tools:ignore="ContentDescription"/>
    <Button
            android:text="Get Another"
            android:layout_width="match_parent"
            android:onClick="getRandom"
            android:layout_height="wrap_content" android:id="@+id/getRadom" android:layout_weight="0"/>
    <!-- TODO: Update blank fragment layout -->

</LinearLayout>